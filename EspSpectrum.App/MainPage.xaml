<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EspSpectrum.App.MainPage"
             Loaded="ContentPage_Loaded"
             Unloaded="ContentPage_Unloaded">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" >
            <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" SemanticProperties.Description="dot net bot in a hovercraft number nine" />
            <Label Text="EspSpectrum" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

            <HorizontalStackLayout x:Name="BarsContainer" Padding="10" HorizontalOptions="Center">
            </HorizontalStackLayout>

            <VerticalStackLayout>
                    <Label x:Name="LabelInterval" Text="Interval: 33ms"></Label>
                <Slider HorizontalOptions="Fill" Maximum="150" Minimum="1" Value="3" x:Name="IntervalSlider" ValueChanged="Slider_ValueChanged"></Slider>
                <Label x:Name="LabelReadLength"></Label>
            </VerticalStackLayout>
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
