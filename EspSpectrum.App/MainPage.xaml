<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:controls="https://trungnt2910.github.io/schemas/maui/2022/colorpicker"
             x:Class="EspSpectrum.App.MainPage"
             Loaded="ContentPage_Loaded"
             Unloaded="ContentPage_Unloaded">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="4" >
            <Image Source="dotnet_bot.png" HeightRequest="100" Aspect="AspectFit" SemanticProperties.Description="dot net bot in a hovercraft number nine" />
            <Label Text="EspSpectrum" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

            <HorizontalStackLayout x:Name="BarsContainer" Padding="10" HorizontalOptions="Center">
            </HorizontalStackLayout>

            <VerticalStackLayout Spacing="4">
                <Label x:Name="LabelInterval" Text="Interval: 10ms"></Label>
                <Slider HorizontalOptions="Fill" Maximum="150" Minimum="2" Value="10" x:Name="IntervalSlider" ValueChanged="Slider_ValueChanged"></Slider>
                
                <Label x:Name="LabelHistoLength" Text="Histo length: 10 frames"></Label>
                <Slider HorizontalOptions="Fill" Maximum="50" Minimum="0" Value="10" x:Name="HistoLengthSlider" ValueChanged="HistoLengthSlider_ValueChanged"></Slider>

                <Label x:Name="LabelBrightness" Text="Brightness: 10 frames"></Label>
                <Slider HorizontalOptions="Fill" Maximum="255" Minimum="0" Value="200" x:Name="BrightnessSlider" ValueChanged="BrightnessSlider_ValueChanged"></Slider>
                
                <Border Stroke="LightGray"
                    HorizontalOptions="Fill"
                    StrokeShape="RoundRectangle 12"
                    HeightRequest="40">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0000" Offset="0.000" />
                            <GradientStop Color="Yellow"  Offset="0.166" />
                            <GradientStop Color="#00FF00" Offset="0.333" />
                            <GradientStop Color="Cyan"    Offset="0.500" />
                            <GradientStop Color="#0000FF" Offset="0.666" />
                            <GradientStop Color="Magenta" Offset="0.833" />
                            <GradientStop Color="#FF0000" Offset="1.000" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <GraphicsView x:Name="Gv" StartInteraction="Gv_StartInteraction" EndInteraction="Gv_EndInteraction"></GraphicsView>
                </Border>
                
                <controls:ColorPicker
                   x:Name="HighColorPicker"
                   ColorFlowDirection="Horizontal"
                   ColorSpectrumStyle="HueOnlyStyle"
                   PickedColorChanged="HighColorPicker_PickedColorChanged"
                   PointerRingBorderUnits="1"
                   PointerRingDiameterUnits="0.2" 
                   MinimumHeightRequest="40"
                    MinimumWidthRequest="40">
                </controls:ColorPicker>
                <controls:ColorPicker
                   x:Name="MidColorPicker"
                   ColorFlowDirection="Horizontal"
                   ColorSpectrumStyle="HueOnlyStyle"
                   PickedColorChanged="MidColorPicker_PickedColorChanged"
                   PointerRingBorderUnits="0.5"
                   PointerRingDiameterUnits="0.2" 
                   MinimumHeightRequest="40" MinimumWidthRequest="40">
                </controls:ColorPicker>
                <controls:ColorPicker
                   x:Name="LowColorPicker"
                   ColorFlowDirection="Horizontal"
                   ColorSpectrumStyle="HueOnlyStyle"
                   PickedColorChanged="LowColorPicker_PickedColorChanged"
                    
                   MinimumHeightRequest="40" MinimumWidthRequest="40">
                </controls:ColorPicker>
            </VerticalStackLayout>
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
